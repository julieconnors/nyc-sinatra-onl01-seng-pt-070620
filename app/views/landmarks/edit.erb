<h2>Edit Historical Landmark</h2>

    <form action="/landmarks/<%= @landmark.id %>" method="post">
        <input type="hidden" id="hidden" name="_method" value="patch">

        <label>Name:</label>
        <input type="text" name="name" id="landmark[name]" value="<%= @landmark.name %>">

        <label>Year:</label>
        <input type="text" name="year_completed" id="landmark[year_completed]" value="<%= @landmark.year_completed %>">

        <input type="submit" value="Edit Landmark">
    </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
