<h2>Edit Figure</h2>

    <form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">

        <label>Name: </label>
        <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br>

        <h3>Titles</h3>
        <% Title.all.each do |title| %>
            <%= title.name %><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><br>
        <% end %>

        <h3>Create New Title:</h3>
        <input type="text" id="new_title" name="title[name]"><br>

        <h3>Landmarks</h3>
        <% Landmark.all.each do |landmark| %>
            <%= landmark.name %><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
        <% end %>

        <h3>Create New Landmark</h3>
        
        <label>Name:</label>
            <input type="text" id="new_landmark" name="landmark[name]">

        <label>Year:</label>
            <input type="text" name="landmark[year_completed]">

        <input type="submit" id="submit" value="Edit Figure">
    </form>

    